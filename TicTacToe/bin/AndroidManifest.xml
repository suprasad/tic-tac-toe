<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tic.tac.toe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tic.tac.toe.TicTacToeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tic.tac.toe.StartNewPlay"
            android:label="@string/title_activity_start_new_play"
            android:parentActivityName="com.tic.tac.toe.TicTacToeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tic.tac.toe.TicTacToeActivity" />
        </activity>
        <activity
            android:name="com.tic.tac.toe.OpenSettings"
            android:label="@string/title_activity_open_settings"
            android:parentActivityName="com.tic.tac.toe.TicTacToeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tic.tac.toe.TicTacToeActivity" />
        </activity>
        <activity
            android:name="com.tic.tac.toe.StartNewPlayGrid"
            android:label="@string/title_activity_start_new_play_grid"
            android:parentActivityName="com.tic.tac.toe.TicTacToeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tic.tac.toe.TicTacToeActivity" />
        </activity>
        <activity
            android:name="com.tic.tac.toe.SelectSymbol"
            android:label="@string/title_activity_select_symbol"
            android:parentActivityName="com.tic.tac.toe.TicTacToeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tic.tac.toe.TicTacToeActivity" />
        </activity>
    </application>

</manifest>
